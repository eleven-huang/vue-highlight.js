{
  "name": "vue-highlight.js",
  "version": "3.0.0",
  "description": "Highlight.js syntax highlighter component for Vue.",
  "main": "./dist/vue-highlight.cjs.js",
  "module": "./dist/vue-highlight.es.js",
  "unpkg": "./dist/vue-highlight.web.min.js",
  "jsdelivr": "./dist/vue-highlight.web.min.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "dev": "vue-up dev",
    "build": "vue-up build",
    "lint": "tslint -p .",
    "format": "prettier --write \"{src/**,dev/**/*.ts,lib/**}\"",
    "test": "npm run lint && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/vue-highlight.js.git"
  },
  "keywords": [
    "vue",
    "vuejs",
    "vue-component",
    "highlight.js",
    "syntax",
    "highlight"
  ],
  "author": "Saran Tanpituckpong <sarunta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gluons/vue-highlight.js/issues"
  },
  "homepage": "https://gluons.github.io/vue-highlight.js/",
  "peerDependencies": {
    "highlight.js": "^9.11.0",
    "vue": "2"
  },
  "devDependencies": {
    "@gluons/prettier-config": "^2.0.0",
    "@gluons/vue-up": "^0.3.3",
    "@types/detect-indent": "^5.0.0",
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^23.3.10",
    "@types/node": "8",
    "@vue/test-utils": "^1.0.0-beta.28",
    "csstype": "^2.6.0",
    "highlight.js": "^9.12.0",
    "jest": "^23.6.0",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tsconfig-gluons": "^1.0.1",
    "tslint": "^5.12.0",
    "tslint-config-gluons": "^2.0.3",
    "typescript": "^3.2.2",
    "vue": "^2.5.21",
    "vue-class-component": "^6.3.2",
    "vue-property-decorator": "^7.2.0",
    "vue-template-compiler": "^2.5.21"
  },
  "dependencies": {
    "detect-indent": "^5.0.0",
    "redent": "^2.0.0",
    "tslib": "^1.9.3"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "IS_WEB_BUNDLE": false
    }
  }
}
